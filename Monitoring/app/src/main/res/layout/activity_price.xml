<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriceActivity">

    <LinearLayout
        android:id="@+id/bar_layout"
        android:orientation="horizontal"
        android:background="@color/colorGrayAction"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Ввод цены"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:textColor="#a49b9b"
                android:layout_marginRight="5dp"
                android:text="далее"
                android:id="@+id/btn_next"
                android:background="@color/colorTransParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/bar_layout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:hint="ценa"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:layout_margin="10dp"
            android:id="@+id/tv_price_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_one"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="2"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="3"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="4"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="5"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="6"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="7"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="8"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="9"
            android:background="@drawable/round"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:textColor="@color/colorBlack"
            android:id="@+id/btn_dot"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="."
            android:background="@drawable/round_white"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorBlack"
            android:id="@+id/btn_0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:background="@drawable/round_white"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
        <Button
            android:textColor="@color/colorBlack"
            android:id="@+id/btn_delete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="x"
            android:background="@drawable/round_white"
            android:layout_width="@dimen/roundButtonSize"
            android:layout_height="@dimen/roundButtonSize" />
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>